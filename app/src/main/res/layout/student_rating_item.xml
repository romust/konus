<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"

        android:paddingBottom="8dp"

        android:paddingStart="14dp"
        android:paddingTop="2dp">


        <FrameLayout
            android:id="@+id/frame_position"
            android:layout_width="25dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rating_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"

                tools:text="111" />
        </FrameLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/frame_position"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/frame_points">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                tools:text="Устьянцев Роман Николаевич" />

            <TextView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="05440" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/frame_points"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/label"
                android:tint="@color/colorAccent"
                android:paddingEnd="-28dp"
                android:layout_gravity="center_vertical|center_horizontal"
                />

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:paddingEnd="14dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="270" />
        </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
