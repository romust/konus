<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/settingsEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Текущий адрес:" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="romust@bk.ru"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Новый адрес"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сохранить адрес" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Синхронизировать рейтинг с Google Таблицей:" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etSyncSheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Ссылка на Google Таблицу"
                    android:text="https://docs.google.com/spreadsheets/d/15oBVek8_4NJxndZUXIlU73grvw96Zl_C3bhfgIVm9Uk/edit#gid=0" />

                <Button
                    android:id="@+id/btnEditEtSyncSheet"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"

                    android:drawableStart="@drawable/edit" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Добавить студентов из Google Таблицы:" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etAddDataToRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="Ссылка на Google Таблицу" />

                <Button
                    android:id="@+id/btnAddDataToRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Добавить" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnSetToZero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Обнулить рейтинг" />

            <Button
                android:id="@+id/btnDeleteRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Удалить рейтинг"
                android:textColor="#ff0000" />

        </LinearLayout>

    </ScrollView>
</FrameLayout>